<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>Book - Management</display-name>

	<welcome-file-list>
		<welcome-file>view/welcome.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>BookServlet</servlet-name>
		<servlet-class>com.codeenginestudio.management.book.servlet.BookServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>BookServlet</servlet-name>
		<url-pattern>/book/</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>BookServlet</servlet-name>
		<url-pattern>/book/add</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>BookServlet</servlet-name>
		<url-pattern>/book/insert</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>BookServlet</servlet-name>
		<url-pattern>/book/edit</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>BookServlet</servlet-name>
		<url-pattern>/book/update</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>BookServlet</servlet-name>
		<url-pattern>/book/delete</url-pattern>
	</servlet-mapping>

	<context-param>
		<param-name>log4j-config-location</param-name>
		<param-value>WEB-INF/log4j.properties</param-value>
	</context-param>

	<listener>
		<listener-class>com.codeenginestudio.management.book.servlet.ContextListener</listener-class>
	</listener>
</web-app>