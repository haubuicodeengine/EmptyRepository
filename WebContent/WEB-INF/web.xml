<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>Book - Management</display-name>

	<welcome-file-list>
		<welcome-file>static/view/book/welcome.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Book</servlet-name>
		<servlet-class>com.codeenginestudio.management.book.servlets.BookServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>AddBook</servlet-name>
		<servlet-class>com.codeenginestudio.management.book.servlets.AddBookServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>EditBook</servlet-name>
		<servlet-class>com.codeenginestudio.management.book.servlets.EditBookServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>DeleteBook</servlet-name>
		<servlet-class>com.codeenginestudio.management.book.servlets.DeleteBookServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Book</servlet-name>
		<url-pattern>/Book/</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>AddBook</servlet-name>
		<url-pattern>/Book/Add</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>EditBook</servlet-name>
		<url-pattern>/Book/Edit</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>DeleteBook</servlet-name>
		<url-pattern>/Book/Delete</url-pattern>
	</servlet-mapping>

</web-app>